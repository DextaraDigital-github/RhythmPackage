<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DueDate</fullName>
    <active>true</active>
    <errorConditionFormula>OR(AND(ISNEW(),Due_Date__c &lt; Today()),AND(ISCHANGED(Due_Date__c),Due_Date__c &lt; Today()))</errorConditionFormula>
    <errorMessage>Due date cannot be set to a past date</errorMessage>
</ValidationRule>
