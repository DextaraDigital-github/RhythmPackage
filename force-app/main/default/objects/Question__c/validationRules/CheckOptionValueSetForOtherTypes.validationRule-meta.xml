<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CheckOptionValueSetForOtherTypes</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT((ISBLANK(OptionValueSet__c))) ,
NOT(OR((ISPICKVAL(Question_Type__c,&apos;Radio&apos;)),
(ISPICKVAL(Question_Type__c, &apos;Picklist&apos;)),
(ISPICKVAL(Question_Type__c, &apos;Picklist (Multi-Select)&apos;)))))</errorConditionFormula>
    <errorMessage>Response Values are not required for the selected Question Type</errorMessage>
</ValidationRule>
