<apex:page renderAs="pdf" controller="DisplayPDFController" showHeader="false" cache="true">
    <apex:stylesheet value="{!URLFOR($Resource.pdfStyles, 'styles.css')}"/>
    <div style="width:100vw;">
    	<div class="headerDiv" style="height: 56px; padding: 20px; background-color: #03314d; font-family: Source Sans Pro, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif !important;">
            <div class="headerText" style="font-size: 40px; color: white; font-weight: bold">Rhythm</div>
        </div>
        <div class="tableDiv" style="width:100%; font-family: Source Sans Pro, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif !important;">
            <table style="border-collapse:collapse; padding: 4px; page-break-inside:auto; width:100%;">
                <thead style="background-color: rgb(181 190 197) !important; font-size: 14px;">
                    <tr style="page-break-inside:avoid; page-break-after:auto; width:100%;">
                        <apex:repeat value="{!columns}" var="column">
                            <th style="padding: 10px; border: 1px solid #E9E9E9;">{!column.label}</th>
                        </apex:repeat>
                    </tr>
                </thead>
                <tbody style="background-color: #F9F9F9 !important; font-size: 12px;">
                    <apex:repeat value="{!data}" var="row">
                        <tr style="page-break-inside:avoid; page-break-after:auto;">
                            <apex:repeat value="{!columns}" var="column">
                                <td style="padding: 10px; border: 1px solid #E9E9E9;">{!row[column.name]}</td>
                            </apex:repeat>
                        </tr>
                    </apex:repeat>
                </tbody>
            </table>
        </div>
    </div>
</apex:page>